<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <h2 class="text-center"><%= @article.title %></h2>
      <div class="card d-flex justify-content-center text-center">
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">by <%= @article.author %></li>
            <li class="list-group-item"></li>
          </ul>
          <p class="card-text"><%= simple_format(@article.description) %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %> ago
            </small>
          </li>
        </ul>
        <div class="card-body d-flex justify-content-center">
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info me-md-2" %>
          <%= link_to 'Delete', article_path(@article), data: { "turbo_method": :delete, "turbo_confirm": "Are you sure?" }, class: "btn btn-outline-danger" %>
        </div>
      </div>
      <p class="text-center mt-3"><%= link_to 'Return to articles listing', articles_path %></p>
    </div>
  </div>
</div>

