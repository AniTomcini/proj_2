<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with model: @article, class: "shadow p-3 mb-4 bg-secondary bg-gradient rounded" do |f| %>
        <div class="mb-3 row">
          <%= f.label :Title, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label :Author, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.text_field :author, class: "form-control shadow rounded", placeholder: "Author of Article" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label :Description, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Article" %>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %> 
        </div>

      <% end %>
    </div>

    <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class:"text-center" %>
  </div>
</div>